<aura:component description="sumbit quote" controller="FMZ_SubmitQuoteNewcoController"
                implements="force:lightningQuickActionWithoutHeader,force:hasRecordId,lightning:isUrlAddressable" access="global">

    <aura:attribute name="processing" type="Boolean" default="true"/>
	 
	 
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
 
    <lightning:notificationsLibrary aura:id="notifLib"/>
	
    <div class="slds-is-relative" style="height:250px;">
        <aura:if isTrue="{!v.processing}">
            <lightning:spinner variant="brand" size="large" alternativeText="Submitting... Please Wait"/>
        </aura:if>
    </div>


</aura:component>