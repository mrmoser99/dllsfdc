<aura:component description="Manually Decline Credit App" controller="CD_ManualController"
                implements="force:lightningQuickActionWithoutHeader,force:hasRecordId" access="global">

    <aura:attribute name="processing" type="Boolean" default="true"/>

    <aura:handler name="init" value="{!this}" action="{!c.declineAction}"/>

    <lightning:notificationsLibrary aura:id="notifLib"/>

    <div class="slds-is-relative" style="height:250px;">
        <aura:if isTrue="{!v.processing}">
            <lightning:spinner variant="brand" size="large" alternativeText="Declining... Please Wait"/>
        </aura:if>
    </div>


</aura:component>