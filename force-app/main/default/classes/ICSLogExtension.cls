    public pageReference submit(){   
 		System.HttpResponse response;
 		ICS_Log__c log;
 	 
 		log = l.clone();
 		log.ownerId = userInfo.getUserId();
 		
 		if (l.status__c.contains('OK')){
    		ApexPages.Message msg = new ApexPages.Message(ApexPages.Severity.FATAL, 'Cannot resubmit a successful transaction!');
 			ApexPages.addMessage(msg);
 			return null;
    	}
   		
   		try{
   			System.HttpRequest request = new System.HttpRequest();
    		request.setEndpoint(l.end_point__c); 
    		
    		if (l.soapaction__c != null)
    			request.setHeader('SOAPAction', l.soapaction__c);
    		if (l.soapaction__c == null)
    			request.setHeader('content-type', 'application/json');
    		else
    			request.setHeader('Content-Type', 'text/xml'); 
        	
    		request.setHeader('Authorization', 'Bearer '+ ICVUtility.getAccessToken());
    		request.setMethod('POST');
    		 
			request.setBody(l.xml__c); 
			system.debug('sending: ' + l.xml__c);
    		response = new System.Http().send(request); 
    		
			if (
				(l.caller__c == 'ICSUtility.sendRequest' && string.valueOf(response.getStatusCode()) == l.ok_return_code__c)
			|| 
				(l.caller__c == 'updateICSManualDescion' && string.valueOf(response.getStatusCode()) == l.ok_return_code__c)
			|| 
				(l.caller__c == 'getDataRequest LOS Picked' && string.valueOf(response.getStatusCode()) == l.ok_return_code__c)
				)
			{ 	
				log.xml_result__c = response.getBody();
				log.status__c = 'OK';
				insert log;
			}
			else{ 
				log.xml_result__c = response.getBody();
				log.status__c = 'Check XML result';
				insert log;
				
			}
		}catch (Exception e){
			log.xml_result__c = string.valueOf(e);
			log.status__c = 'Callout Failure';
			insert log;
		} 	
    	
 		PageReference newPage = new PageReference('/' + log.id);
    	newPage.setRedirect(true);
		return newPage;
    }
    
